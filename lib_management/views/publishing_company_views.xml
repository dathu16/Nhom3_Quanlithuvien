<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="publishing_company_view_search" model="ir.ui.view">
        <field name="name">publishing.company.search</field>
        <field name="model">publishing.company</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="address"/>
            </search>
        </field>
    </record>

    <record id="publishing_company_view_tree" model="ir.ui.view">
        <field name="name">publishing.company.tree</field>
        <field name="model">publishing.company</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="address"/>
            </tree>
        </field>
    </record>

    <record id="publishing_company_view_form" model="ir.ui.view">
        <field name="name">publishing.company.form</field>
        <field name="model">publishing.company</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="address"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="publishing_company_act_window" model="ir.actions.act_window">
        <field name="name">Nhà xuất bản</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">publishing.company</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>