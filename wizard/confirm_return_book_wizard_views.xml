<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="confirm_return_book_wizard_form_view" model="ir.ui.view">
            <field name="name">confirm.return.book.wizard.form.view</field>
            <field name="model">confirm.return.book.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="call_card_id" invisible="1"/>
                            <field name="comment"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="confirm" string="Xác nhận" type="object" class="btn-primary"/>
                        <button special="cancel" string="Hủy" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>